
@page "/fetchlakedata"

@using BlzTest.Service
@inject BlzTest.Service.LakeService LakeService
@inject BlzTest.Service.FishService FishService

<h1>Fish Inventory</h1>


@if (lakes == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Lake Name</th>
                <th>Primary Fish</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lake in lakes)
            {

                <tr>
                    <td>@lake.LakeName</td>
                    <td>@string.Join(", ", lake.FishList) </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<BlzTest.Data.ViewModels.LakeDto> lakes;
    private List<BlzTest.Data.ViewModels.FishDto> fishes;

    protected override async Task OnInitializedAsync()
    {
        lakes = await LakeService.GetLakesAsync();
    }
}
